<div class="container py-5">
  <h1>Brouillon</h1>
  <%= cl_image_tag Spot.first.photo.key, height: 300, width: 400, crop: :fill %>

  <!-- Bottom navbar -->
  <nav class="navbar navbar-light bg-light fixed-bottom">
    <div class="container-fluid">
    <%= link_to (image_tag('icons/home.svg')), root_path %>
