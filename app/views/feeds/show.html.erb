<div class="bg-sand feed-wrapper hide-scrollbar">
  <div class="card-show-head">
    <div class="banner-feed">
      <h1 class="mt-5">Bon retour <%= @current_user.nickname%> !</h1>
    </div>
  </div>
  <div class="container my-3">
    <div class="feed" data-controller="feed-subscription" data-feed-subscription-user-id-value="<%= current_user.id %>">

      <h2 class="text-center mb-3">Votre communaut√©</h2>
      <div class="feed-cards"
        data-feed-subscription-target="messages"
        data-controller="like-subscription"
        data-like-subscription-user-id-value="<%= current_user.id %>"
      >
        <% @feed.first(10).sort_by { |feed| feed.created_at}.reverse.each do |feed_element| %>
            <%= render partial: "shared/feed_card_#{feed_element.feed_content[:type]}", locals: {
              instance: feed_element.feed_content[:instance]
            } %>
        <% end %>
      </div>
    </div>
  </div>
  <%= render "shared/navbar" %>
</div>
