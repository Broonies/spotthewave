<div class="feed-card">
  <%= cl_image_tag instance.user.photo.key, class:'avatar' %>
  <div class="feed-content">
    <div class="d-flex justify-content-between">
      <span class="text-small text-blue-500">Il y a <%= time_ago_in_words(instance.created_at) %></span>
      <div class="feed-like-button" id="review-likes-<%= instance.id %>">
        <%= render partial: "shared/like_button", locals: {instance: instance} %>
      </div>
    </div>
    <p class="review-description"><span class="bold"><%= instance.user.nickname %></span> a ajouté un commentaire sur <span class="bold"><%= link_to "#{instance.spot.name}", spot_path(instance.spot.id) %></span></p>
    <div class= "feed-rating mt-1">
      <p><%= instance.content %></p>
      <div class="rating mt-4">
        <div class="d-flex gap-2">
          <div class="d-flex gap-1">
            <% Review::AUTHORIZED_RATINGS.each do |number| %>
              <i class="feed-rating-stars fa<%= (number > instance.rate) ? 'r' : 's' %> fa-star"></i>
            <% end %>
          </div>
        </div>
        <p class="mt-2">Niveau de Difficulté <span class="bold"><%= instance.difficulty %></span></p>
      </div>
    </div>

  </div>
</div>
