<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<h1>Top 5 des mieux notés</h1>
  <div class="container fluid ">
 <div class="scrolling-wrapper row flex-row flex-nowrap mt-4 pb-4 pt-2">
    <% @top_spots.each do |spot| %>
    <%= link_to spot_path(spot) do %>
      <div class="card mb-3 position-relative">
        <%= cl_image_tag spot.photo.key %>
        <div class="weather-over">
          <p class="weather-details">16°C | <%= image_tag('icons/sun.svg') %> | 2 km/h</p>
        </div>
        <div class="card-body d-flex flex-column">
          <div class="d-flex justify-content-between">
            <h3><%= spot.name %></h3>
            <div class="d-flex align-items-center">
              <p class="mx-1"><%= Review.average_rating(spot).to_i.times do %></p>
                <%= image_tag('icons/star-fill.svg') %>
              <% end %>
            </div>
          </div>
          <p class="mb-2"><%= spot.address %></p>
          <div class="d-flex justify-content-between">
            <div class="d-flex flex-column">
              <p class="overtitre" >DISTANCE</p>
              <p>5 km</p>
            </div>
            <p class="overtitre">DÉBUTANT</p>
          </div>
          </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>





<h1>Tous les Spots</h1>
<ul>
  <% @spots.each do |spot| %>
    <div class="card-product mb-3">
      <%= cl_image_tag spot.photo.key %>
        <div class="card-product-infos">
          <h2><%= spot.name %></h2>
          <p><%= spot.city %></p>
        <%= link_to "Voir plus d'infos", spot_path(spot) %>
      </div>
    </div>
  <% end %>
</ul>
